<tiles-definitions>
    <!-- 模块:search 业务对像:Email 管理后台 tiles模板配置 -->
    <!-- 作者:haipege -->
    <!-- Email 管理 首页(列表页) -->
	<definition name="search.email.manager" extends="default.manager">
	    <put-attribute name="default-center" value="search.email.center"></put-attribute>
	</definition>
	<definition name="search.email.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/search/email/email_center.jsp"></put-attribute>
	</definition>
	
	<!-- Email 新增,编辑页面 -->
	<definition name="search.email.update" extends="default.manager">
	    <put-attribute name="default-center" value="search.email.update.center"></put-attribute>
	</definition>
	<definition name="search.email.update.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/search/email/email_update.jsp"></put-attribute>
	</definition>
	
	<!-- Email 明细页 -->
	<definition name="search.email.detail" extends="default.manager">
	    <put-attribute name="default-center" value="search.email.detail.center"></put-attribute>
	</definition>
	<definition name="search.email.detail.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/search/email/email_detail.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>