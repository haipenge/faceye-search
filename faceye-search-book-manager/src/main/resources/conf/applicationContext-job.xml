<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd"
	default-lazy-init="false">

	<description>Spring常量配置</description>
	<!-- Parse Job Define. -->
	<bean id="parseJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="parseJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/3 * * * ?</value>
		</property>
	</bean>
	<bean id="parseJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="parseJob" />
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>

	<!-- Init Seed -->
	<bean id="initSeedJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="initSeedJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 55 10 * * ?</value>
		</property>
	</bean>
	<bean id="initSeedJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="initSeedJob" />
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	<!-- Crawl Job -->
	<bean id="crawlJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="crawlJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/2 * * * ?</value>
		</property>
	</bean>
	<bean id="crawlJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="crawlJob" />
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	<!-- Reset Crawl result job -->
	<bean id="resetCrawlResultJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="resetCrawlResultJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 05 14 * * ?</value>
		</property>
	</bean>

	<bean id="resetCrawlResultJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="resetCrawlResultJob" />
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	
	
	
	<!--Index Writer  job -->
	<bean id="indexWriterJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="indexWriterJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/5 * * * ?</value>
		</property>
	</bean>

	<bean id="indexWriterJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="indexWriterJob"/>
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	
	<!--Dedup  job -->
	<bean id="dedupJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="dedupDetail" />
		</property>
		<property name="cronExpression">
			<value>0 05 09 * * ?</value>
		</property>
	</bean>

	<bean id="dedupDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="dedupJob"/>
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	
	<!--conver parseResult 2 mongo  job -->
	<bean id="convertJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="convertJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 20 21 * * ?</value>
		</property>
	</bean>

	<bean id="convertJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="convertJob"/>
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	
	<!-- Auto Publish job -->
	<!--conver parseResult 2 mongo  job -->
	<bean id="autoPublishJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="autoPublishJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/10 * * * ?</value>
		</property>
	</bean>

	<bean id="autoPublishJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="autoPublishJob"/>
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	
	<!-- Reset seed link job -->
	<bean id="resetSeedLinkJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="resetSeedLinkJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/59 * * * ?</value>
		</property>
	</bean>

	<bean id="resetSeedLinkJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="resetSeedLinkJob"/>
		</property>
		<property name="targetMethod">
			<value>doJob</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
</beans>