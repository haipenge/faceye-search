<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- 模块:book 业务对像:Category 管理后台 tiles模板配置 -->
    <!-- 作者:haipege -->
    <!-- Category 管理 首页(列表页) -->
	<definition name="book.category.manager" extends="default.manager">
	    <put-attribute name="default-center" value="book.category.center"></put-attribute>
	</definition>
	<definition name="book.category.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/book/category/category_center.jsp"></put-attribute>
	</definition>
	
	<!-- Category 新增,编辑页面 -->
	<definition name="book.category.update" extends="default.manager">
	    <put-attribute name="default-center" value="book.category.update.center"></put-attribute>
	</definition>
	<definition name="book.category.update.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/book/category/category_update.jsp"></put-attribute>
	</definition>
	
	<!-- Category 明细页 -->
	<definition name="book.category.detail" extends="default.manager">
	    <put-attribute name="default-center" value="book.category.detail.center"></put-attribute>
	</definition>
	<definition name="book.category.detail.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/book/category/category_detail.jsp"></put-attribute>
	</definition>
	
	
</tiles-definitions>